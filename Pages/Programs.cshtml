@page
@model YMCAProject.Pages.ProgramsModel
@{
    ViewData["Title"] = "Programs";
}

<h1>Programs Page</h1>
<p>Welcome to the Programs page. Here you can learn more about our program offerings.</p>
<a class='btn btn-primary mb-3' href='/Admin/CreateProgram'>Create New Program</a>

<table class="table">
    <thead>
        <tr>
            <th>Program</th>
            <th>Description</th>
            <th>Price (Member)</th>
            <th>Price (Nonmember)</th>
            <th>Spots Left</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.programList) {
        <tr>
            <td>@item.ClassName</td>
            <td>
                @item.ClassDescription
            </td>
            <td>
                @item.PriceMember
            </td>
            <td>
                @item.PriceNonmember
            </td>
            <td>
                @item.SpotsLeft
            </td>
            <td style='white-space:nowrap'>
                <a class='btn btn-primary btn-sm' href='/Classes/Edit?name=@item.ClassName'>Register</a> 
            </td>
        </tr>
}
    </tbody>
</table>
